<UserControl x:Class="UI.WPF.Views.Forms.CustomListForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:local="clr-namespace:UI.WPF.Views.SimProject"
             xmlns:DS="clr-namespace:DataSource;assembly=DataSource"
             xmlns:DataCnt="clr-namespace:DataInterface;assembly=DataInterface"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:MUExt="clr-namespace:UI.WPF.Extensions"
             xmlns:LocalHelpers="clr-namespace:UI.WPF.Helpers"
             xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:lc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             mc:Ignorable="d"
             MinWidth="300"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             d:DesignHeight="450"
             d:DesignWidth="800">
   
    <Grid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <lc:DockLayoutControl AllowItemSizing="True">
            <lc:GroupBox lc:DockLayoutControl.AllowHorizontalSizing="True"
                         lc:DockLayoutControl.Dock="Left"
                         ShowShadow="WhenHasMouse"
                         CornerRadius="2"
                         TitleVisibility="Collapsed"
                         DisplayMode="Light"
                         Width="300"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Header="Navigation">
                <Grid>
                    <Grid.RowDefinitions>
                        
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition /> <!--7 rows-->
                    </Grid.RowDefinitions>
                    <TextBlock Text="List Name"
                               Style="{StaticResource TextBlockFormStyle}"
                               Grid.Row="0" />
                    <dxe:TextEdit Style="{StaticResource  SlimTextEditFormStyle}"
                                  Text="{Binding DataContext.NewCustomListName,RelativeSource={RelativeSource AncestorType=local:ProjectMainView}}"
                                  Grid.Row="1"/>
                   <TextBlock Text="List Value Type"
                               Style="{StaticResource TextBlockFormStyle}"
                               Grid.Row="2" />
                    <ComboBox Style="{StaticResource ComboBoxFormStyle}"
                              ItemsSource="{Binding DataContext.ValTypes.Primatives,RelativeSource={RelativeSource AncestorType=local:ProjectMainView}}"
                              DisplayMemberPath="Name"
                              Grid.Row="3"
                              SelectedItem="{Binding DataContext.ListType,RelativeSource={RelativeSource AncestorType=local:ProjectMainView}}" />

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="4" Margin="2,6"
                                HorizontalAlignment="Right">
                        <Button Content="Add" Style="{StaticResource SlimButtonStyle}"
                                Command="{Binding DataContext.AddCustomListItemCmd,RelativeSource={RelativeSource AncestorType=local:ProjectMainView}}" />
                        <Button Content="remove"
                                Style="{StaticResource SlimButtonStyle}"
                                Command="{Binding DataContext.RemoveCustomListItemCmd,RelativeSource={RelativeSource AncestorType=local:ProjectMainView}}" />
                    </StackPanel>

                    <TextBlock Text="Custom Lists"
                               Style="{StaticResource TextBlockFormStyle}"
                               Grid.Row="5" />
                    <ListView ItemsSource="{Binding [CustomLists].ItemList}"
                              Grid.Row="6"
                              Margin="2,6"
                              SelectedItem="{Binding DataContext.SelectedCustomList,RelativeSource={RelativeSource AncestorType=local:ProjectMainView},Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Key}"
                                               Style="{StaticResource TextBlockFormStyle}"
                                               KeyboardNavigation.IsTabStop="False" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                
            </lc:GroupBox>
            <lc:GroupBox lc:DockLayoutControl.AllowHorizontalSizing="True"
                         lc:DockLayoutControl.Dock="Client"
                         DisplayMode="Light"
                         TitleVisibility="Collapsed"                         
                         Header="Content">
                <ContentControl Content="{Binding DataContext.SelectedCustomList.Value,RelativeSource={RelativeSource AncestorType=local:ProjectMainView}}"
                                ContentTemplate="{StaticResource CustomListTemplate}" />
                
            </lc:GroupBox>
        </lc:DockLayoutControl>
        
    </Grid>
</UserControl>
