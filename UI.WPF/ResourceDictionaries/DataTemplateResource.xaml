<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:UI.WPF.ResourceDictionaries"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    x:Class="UI.WPF.ResourceDictionaries.DataTemplateResource"
                    x:ClassModifier="public"
                    xmlns:System="clr-namespace:System;assembly=mscorlib"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:DataCnt="clr-namespace:DataInterface;assembly=DataInterface"
                    xmlns:MUExt="clr-namespace:UI.WPF.Extensions"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                    xmlns:v4="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
                    mc:Ignorable="d">

    <!--#region Constants -->
    <sys:Double x:Key="HOneSize">20</sys:Double>
    <sys:Double x:Key="BdySize">12</sys:Double>
    <sys:Double x:Key="ButtonHeight">48</sys:Double>
    <sys:Double x:Key="ButtonWidth">96</sys:Double>
    <sys:Double x:Key="FormSize">14</sys:Double>
    <sys:Double x:Key="FormLabelSize">16</sys:Double>
    <sys:Double x:Key="HighlightHeight">40</sys:Double>
    <!---->
    
    
    <!--#region Settings DT Styles-->
    <DataTemplate x:Key="LocalFileTemplate">
        <Grid  Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Project Name" 
                       Grid.Row="0"
                       Grid.Column="1"  
                   Style="{StaticResource TextBlockFormStyle}"
                      />
            <TextBox Text="{Binding ConnectionName}" 
                       Grid.Row="1"
                       Grid.Column="1"     
                       Style="{StaticResource TextBoxFormStyle}"
                      />
            <TextBlock Text="Save Format" 
                       Grid.Row="2"
                       Grid.Column="1"    
                   Style="{StaticResource TextBlockFormStyle}"
                      />
            <ComboBox SelectedItem="{Binding SaveFormat}" 
                     ItemsSource="{Binding Source={MUExt:EnumBindingSourceExtension {x:Type DataCnt:SaveFormat}}}"
                      Grid.Row="3"             
                       Grid.Column="1"     
                        IsReadOnly="True"
                        Style="{StaticResource ComboBoxFormStyle}"
                      />

        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="MSSQLTemplate">
        <Grid  Grid.Column="1" Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Name" 
                       Grid.Row="0"
                       Grid.Column="1"  
                   Style="{StaticResource TextBlockFormStyle}"
                      />
            <TextBox Text="{Binding ConnectionName}" 
                       Grid.Row="1"
                       Grid.Column="1"     
                       Style="{StaticResource TextBoxFormStyle}"
                      />
            <TextBlock Text="Type" 
                       Grid.Row="2"
                       Grid.Column="1"    
                   Style="{StaticResource TextBlockFormStyle}"
                      />
            <TextBox Text="{Binding DSType}" 
                       Grid.Row="3"
                       Grid.Column="1"      
                        Style="{StaticResource TextBoxFormStyle}"
                      />
            <TextBlock Text="Connection String" 
                       Grid.Row="4"
                       Grid.Column="1"   
                   Style="{StaticResource TextBlockFormStyle}"
                      />
            <TextBox Text="{Binding ConnectionString}" 
                       Grid.Row="5"
                       Grid.Column="1"    
                   Style="{StaticResource TextBoxFormStyle}"
                      />
            <Button Content="Create" 
                       Grid.Row="7"
                       Grid.Column="1"              
                    Style="{StaticResource FormButtonStyle}"
                Command="{Binding ConnectCmd}"
                      />
        </Grid>
    </DataTemplate>
    <!--#endregion-->
    <DataTemplate x:Key="TreeItemExpandedTemplate">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
            <v4:Image Source="{StaticResource FolderIconOpen}"
                      Margin="2"
                      x:Name="FldrImg"
                      Width="16"
                      VerticalAlignment="Center"
                      Height="16" />
            <TextBlock Text="{Binding Path=RowData.Row.Name}"                                             
                       VerticalAlignment="Bottom"
                       Height="{Binding ElementName=FldrImg, Path=ActualHeight}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="TreeItemTemplate">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
            <v4:Image Source="{StaticResource FolderIconClosed}"
                      Margin="2"
                      x:Name="FldrImg"
                      Width="16"
                      VerticalAlignment="Center"
                      Height="16" />
            <TextBlock Text="{Binding Path=RowData.Row.Name}"                       
                       VerticalAlignment="Bottom"
                       Height="{Binding ElementName=FldrImg, Path=ActualHeight}" />
        </StackPanel>
    </DataTemplate>
   
    <!-- GroupBox DataTemplates-->
    <DataTemplate x:Key="LayoutGroupHeaderTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource HeaderStyle}"
                       Text="Details"
                       Grid.Column="0" />
            <dx:SimpleButton
                             Grid.Column="1"
                             HorizontalAlignment="Right"
                             Height="22"
               BorderBrush="Transparent"
                BorderThickness="0"
                             Glyph="{StaticResource EditIcon}" />
        </Grid>
    </DataTemplate>
    <!---->
</ResourceDictionary>
